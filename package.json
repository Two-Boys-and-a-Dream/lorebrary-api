{
  "name": "lorebrary-api",
  "version": "1.0.0",
  "description": "Node.js Server for Lorebrary web",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "start": "node server.ts",
    "dev": "node --watch server.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty:check": "prettier --check .",
    "prepare": "npx simple-git-hooks",
    "verify": "npm run pretty:check && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Two-Boys-and-a-Dream/lorebrary-api.git"
  },
  "keywords": [
    "Node",
    "JavaScript",
    "Express"
  ],
  "author": "Raymond Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Two-Boys-and-a-Dream/lorebrary-api/issues"
  },
  "homepage": "https://github.com/Two-Boys-and-a-Dream/lorebrary-api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^7.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.1.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pretty",
    "pre-push": "npm run lint"
  }
}
